{
  "name": "bootstrap-dark-theme",
  "version": "1.3.1",
  "description": "Bootstrap 5 dark theme toggle button",
  "homepage": "https://sanand0.github.io/bootstrap-dark-theme/",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanand0/bootstrap-dark-theme.git"
  },
  "license": "MIT",
  "author": "Anand S <root.node@gmail.com>",
  "type": "module",
  "module": "dark-theme.js",
  "prettier": {
    "printWidth": 120
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "browser": "dist/dark-theme.js",
  "exports": "./dist/dark-theme.js",
  "scripts": {
    "build": "npx -y esbuild dark-theme.js --format=esm --bundle --minify --allow-overwrite --sourcemap --outfile=dist/dark-theme.js",
    "lint:oxlint": "npx -y oxlint --fix",
    "lint:js-md": "npx -y prettier@3.5 --print-width 120 --write '**/*.js' '!**/*.min.js' '!dist/**' '**/*.md'",
    "lint:html": "npx -y js-beautify@1 '**/*.html' --type html --replace --indent-size 2 --max-preserve-newlines 1 --end-with-newline",
    "lint": "npm run lint:oxlint && npm run lint:js-md && npm run lint:html",
    "test": "npx -y vitest@3.1 run",
    "prepublishOnly": "npm run lint && npm run build && npm test"
  },
  "peerDependencies": {
    "bootstrap": "^5.3.7"
  },
  "devDependencies": {
    "happy-dom": "^18.0.1"
  },
  "keywords": [
    "bootstrap",
    "dark-theme",
    "ui"
  ]
}
